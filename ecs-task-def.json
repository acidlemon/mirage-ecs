{
  "containerDefinitions": [
    {
      "name": "mirage-ecs",
      "image": "ghcr.io/acidlemon/mirage-ecs:latest",
      "memory": 128,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "MIRAGE_DOMAIN",
          "value": ".dev.example.net"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mirage-ecs",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "family": "mirage-ecs",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecs-task",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecs-task-execution",
  "networkMode": "awsvpc"
}
